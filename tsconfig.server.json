{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist/",
        "baseUrl": ".",
        "keyofStringsOnly": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2017"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/server/types/*"
            ]
        }
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
